<nav class="navbar  md-5 p-3 navbar-light" style="background-color: #e3f2fd;">
  <div>
    <button class="btn btn-outline-primary">
      <%= link_to 'Wikinimous', root_path %>
    </button>
  </div>
  <div>
    <button class="btn btn-outline-primary">
      <%= link_to 'New Article', new_article_path %>
    </button>
  </div>
</nav>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="mb-4">New article</h2>
            <%= form_with(model: @article, local: true) do |form| %>
              <% if @article.errors.any? %>
                <div class="alert alert-danger">
                  <h4><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>
                  <ul>
                    <% @article.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <%= form.label :title, class: "form-label" %>
                <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :content, class: "form-label" %>
                <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Enter content" %>
              </div>
              <div class="d-flex justify-content-between mt-4">
                <%= form.submit class: "btn btn-primary" %>
                <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
